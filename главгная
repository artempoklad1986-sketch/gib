<?php
session_start();
require_once 'functions.php';

error_log('=== –ú–ï–ì–ê INDEX.PHP –ó–ê–ì–†–£–ñ–ï–ù ===');

// –û–±—Ä–∞–±–æ—Ç–∫–∞ AJAX –∑–∞–ø—Ä–æ—Å–æ–≤
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['action'])) {
    header('Content-Type: application/json; charset=utf-8');

    try {
        switch ($_POST['action']) {
            case 'add_to_cart':
                $productId = $_POST['product_id'] ?? '';
                $quantity = (int)($_POST['quantity'] ?? 1);

                error_log("AJAX: –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –≤ –∫–æ—Ä–∑–∏–Ω—É - ID: {$productId}, –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ: {$quantity}");

                if (!empty($productId) && $quantity > 0) {
                    $result = addToCart($productId, $quantity);

                    if ($result) {
                        $cartCount = getCartCount();
                        $cartTotal = getCartTotal();
                        error_log("AJAX: –¢–æ–≤–∞—Ä –¥–æ–±–∞–≤–ª–µ–Ω, –Ω–æ–≤—ã–π —Å—á–µ—Ç—á–∏–∫: {$cartCount}");

                        echo json_encode([
                            'success' => true,
                            'cartCount' => $cartCount,
                            'cartTotal' => $cartTotal,
                            'message' => '–¢–æ–≤–∞—Ä –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∫–æ—Ä–∑–∏–Ω—É!'
                        ]);
                    } else {
                        echo json_encode([
                            'success' => false,
                            'message' => '–ù–µ —É–¥–∞–ª–æ—Å—å –¥–æ–±–∞–≤–∏—Ç—å —Ç–æ–≤–∞—Ä –≤ –∫–æ—Ä–∑–∏–Ω—É'
                        ]);
                    }
                } else {
                    echo json_encode([
                        'success' => false,
                        'message' => '–ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–µ –ø–∞—Ä–∞–º–µ—Ç—Ä—ã —Ç–æ–≤–∞—Ä–∞'
                    ]);
                }
                break;

            case 'add_to_favorites':
                $productId = $_POST['product_id'] ?? '';
                if (!empty($productId)) {
                    $result = addToFavorites($productId);
                    echo json_encode([
                        'success' => $result,
                        'message' => $result ? '–¢–æ–≤–∞—Ä –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∏–∑–±—Ä–∞–Ω–Ω–æ–µ' : '–¢–æ–≤–∞—Ä —É–∂–µ –≤ –∏–∑–±—Ä–∞–Ω–Ω–æ–º',
                        'favoritesCount' => getFavoritesCount()
                    ]);
                } else {
                    echo json_encode(['success' => false, 'message' => '–ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π ID —Ç–æ–≤–∞—Ä–∞']);
                }
                break;

            case 'remove_from_favorites':
                $productId = $_POST['product_id'] ?? '';
                if (!empty($productId)) {
                    $result = removeFromFavorites($productId);
                    echo json_encode([
                        'success' => $result,
                        'message' => $result ? '–¢–æ–≤–∞—Ä —É–¥–∞–ª–µ–Ω –∏–∑ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ' : '–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è –∏–∑ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ',
                        'favoritesCount' => getFavoritesCount()
                    ]);
                } else {
                    echo json_encode(['success' => false, 'message' => '–ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π ID —Ç–æ–≤–∞—Ä–∞']);
                }
                break;

            case 'submit_review':
                $reviewData = [
                    'id' => generateUniqueId(),
                    'product_id' => $_POST['product_id'] ?? '',
                    'customer_name' => trim($_POST['customer_name'] ?? ''),
                    'customer_email' => trim($_POST['customer_email'] ?? ''),
                    'rating' => (int)($_POST['rating'] ?? 0),
                    'title' => trim($_POST['title'] ?? ''),
                    'comment' => trim($_POST['comment'] ?? ''),
                    'status' => 'pending',
                    'created_at' => date('Y-m-d H:i:s')
                ];

                if ($reviewData['product_id'] && $reviewData['customer_name'] && $reviewData['comment'] && $reviewData['rating']) {
                    $result = saveReview($reviewData);
                    echo json_encode([
                        'success' => $result['success'],
                        'message' => $result['success'] ? '–û—Ç–∑—ã–≤ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω –Ω–∞ –º–æ–¥–µ—Ä–∞—Ü–∏—é' : $result['message']
                    ]);
                } else {
                    echo json_encode(['success' => false, 'message' => '–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è']);
                }
                break;

            case 'get_cart_content':
                $cartData = getCartItems();
                ob_start();
                if (empty($cartData['items'])): ?>
                    <div class='empty-cart text-center py-5'>
                        <div class='empty-cart-icon mb-4'>
                            <i class='fas fa-shopping-cart fa-4x text-muted opacity-50'></i>
                        </div>
                        <h4 class='mb-3'>–ö–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞</h4>
                        <p class='text-muted mb-4'>–î–æ–±–∞–≤—å—Ç–µ —Ç–æ–≤–∞—Ä—ã –≤ –∫–æ—Ä–∑–∏–Ω—É –¥–ª—è –æ—Ñ–æ—Ä–º–ª–µ–Ω–∏—è –∑–∞–∫–∞–∑–∞</p>
                        <button class='btn btn-primary' data-bs-dismiss='modal'>
                            <i class='fas fa-shopping-bag me-2'></i>–ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å –ø–æ–∫—É–ø–∫–∏
                        </button>
                    </div>
                <?php else: ?>
                    <div class='cart-items'>
                        <?php foreach ($cartData['items'] as $item): ?>
                            <div class='cart-item d-flex align-items-center border-bottom py-3' data-product-id='<?= $item['id'] ?>'>
                                <div class='item-image me-3'>
                                    <div class='product-image-placeholder'>
                                        <i class='fas fa-fish text-primary'></i>
                                    </div>
                                </div>
                                <div class='item-info flex-grow-1'>
                                    <h6 class='item-name mb-1'><?= htmlspecialchars($item['name']) ?></h6>
                                    <div class='item-price text-muted'><?= formatPrice($item['price']) ?></div>
                                </div>
                                <div class='item-controls d-flex align-items-center'>
                                    <div class='quantity-controls d-flex align-items-center me-3'>
                                        <button class='btn btn-sm btn-outline-secondary quantity-btn' 
                                                onclick='updateCartQuantity("<?= $item['id'] ?>", <?= $item['quantity'] - 1 ?>)'
                                                <?= $item['quantity'] <= 1 ? 'disabled' : '' ?>>
                                            <i class='fas fa-minus'></i>
                                        </button>
                                        <span class='quantity-value mx-3'><?= $item['quantity'] ?></span>
                                        <button class='btn btn-sm btn-outline-secondary quantity-btn' 
                                                onclick='updateCartQuantity("<?= $item['id'] ?>", <?= $item['quantity'] + 1 ?>)'>
                                            <i class='fas fa-plus'></i>
                                        </button>
                                    </div>
                                    <div class='item-subtotal fw-bold me-3'><?= formatPrice($item['subtotal']) ?></div>
                                    <button class='btn btn-sm btn-outline-danger' 
                                            onclick='removeFromCart("<?= $item['id'] ?>")'
                                            title='–£–¥–∞–ª–∏—Ç—å —Ç–æ–≤–∞—Ä'>
                                        <i class='fas fa-trash'></i>
                                    </button>
                                </div>
                            </div>
                        <?php endforeach; ?>

                        <div class='cart-summary mt-4 pt-3 border-top'>
                            <div class='d-flex justify-content-between align-items-center mb-3'>
                                <span class='text-muted'>–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ç–æ–≤–∞—Ä–æ–≤:</span>
                                <span class='fw-medium'><?= count($cartData['items']) ?> —à—Ç.</span>
                            </div>
                            <div class='d-flex justify-content-between align-items-center'>
                                <h5 class='mb-0'>–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å:</h5>
                                <h4 class='mb-0 text-success cart-total'><?= formatPrice($cartData['total']) ?></h4>
                            </div>
                        </div>
                    </div>
                <?php endif;
                $content = ob_get_clean();
                echo json_encode(['success' => true, 'content' => $content, 'total' => $cartData['total']]);
                break;

            case 'update_cart_item':
                $productId = $_POST['product_id'] ?? '';
                $quantity = (int)($_POST['quantity'] ?? 0);
                $result = updateCartItem($productId, $quantity);
                $cartData = getCartItems();
                echo json_encode([
                    'success' => $result,
                    'cartCount' => getCartCount(),
                    'cartTotal' => $cartData['total'],
                    'message' => $result ? '–ö–æ—Ä–∑–∏–Ω–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∞' : '–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è'
                ]);
                break;

            case 'remove_from_cart':
                $productId = $_POST['product_id'] ?? '';
                $result = removeFromCart($productId);
                $cartData = getCartItems();
                echo json_encode([
                    'success' => $result,
                    'cartCount' => getCartCount(),
                    'cartTotal' => $cartData['total'],
                    'message' => $result ? '–¢–æ–≤–∞—Ä —É–¥–∞–ª–µ–Ω –∏–∑ –∫–æ—Ä–∑–∏–Ω—ã' : '–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è'
                ]);
                break;

            case 'get_favorites_content':
                $favorites = getFavoritesItems();
                ob_start();
                if (empty($favorites)): ?>
                    <div class='empty-favorites text-center py-5'>
                        <div class='empty-favorites-icon mb-4'>
                            <i class='fas fa-heart fa-4x text-muted opacity-50'></i>
                        </div>
                        <h4 class='mb-3'>–°–ø–∏—Å–æ–∫ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ –ø—É—Å—Ç</h4>
                        <p class='text-muted mb-4'>–î–æ–±–∞–≤–ª—è–π—Ç–µ —Ç–æ–≤–∞—Ä—ã –≤ –∏–∑–±—Ä–∞–Ω–Ω–æ–µ, —á—Ç–æ–±—ã –Ω–µ –ø–æ—Ç–µ—Ä—è—Ç—å –∏—Ö</p>
                        <button class='btn btn-primary' data-bs-dismiss='modal'>
                            <i class='fas fa-shopping-bag me-2'></i>–í—ã–±—Ä–∞—Ç—å —Ç–æ–≤–∞—Ä—ã
                        </button>
                    </div>
                <?php else: ?>
                    <div class='favorites-items'>
                        <?php foreach ($favorites as $item): ?>
                            <div class='favorites-item d-flex align-items-center border-bottom py-3'>
                                <div class='item-image me-3'>
                                    <div class='product-image-placeholder'>
                                        <i class='fas fa-fish text-primary'></i>
                                    </div>
                                </div>
                                <div class='item-info flex-grow-1'>
                                    <h6 class='item-name mb-1'><?= htmlspecialchars($item['name']) ?></h6>
                                    <div class='item-price text-success fw-medium'><?= formatPrice($item['price']) ?></div>
                                    <div class='item-description text-muted small'>
                                        <?= htmlspecialchars(mb_substr($item['description'] ?? '', 0, 80)) ?>...
                                    </div>
                                </div>
                                <div class='item-actions d-flex flex-column gap-2'>
                                    <button class='btn btn-sm btn-success' onclick='addToCartFromFavorites("<?= $item['id'] ?>")'>
                                        <i class='fas fa-cart-plus me-1'></i>–í –∫–æ—Ä–∑–∏–Ω—É
                                    </button>
                                    <button class='btn btn-sm btn-outline-danger' onclick='removeFromFavorites("<?= $item['id'] ?>", this)'>
                                        <i class='fas fa-heart-broken me-1'></i>–£–¥–∞–ª–∏—Ç—å
                                    </button>
                                </div>
                            </div>
                        <?php endforeach; ?>
                    </div>
                <?php endif;
                $content = ob_get_clean();
                echo json_encode(['success' => true, 'content' => $content]);
                break;
        }
    } catch (Exception $e) {
        error_log('–û—à–∏–±–∫–∞ AJAX: ' . $e->getMessage());
        echo json_encode(['success' => false, 'message' => '–í–Ω—É—Ç—Ä–µ–Ω–Ω—è—è –æ—à–∏–±–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞: ' . $e->getMessage()]);
    }
    exit;
}

if (isset($_GET['action'])) {
    switch ($_GET['action']) {
        case 'get_product':
            header('Content-Type: application/json; charset=utf-8');
            $id = $_GET['id'] ?? '';
            $product = getProductById($id);
            if ($product) {
                $reviews = getProductReviews($id);
                $product['reviews'] = $reviews;
                echo json_encode($product);
            } else {
                echo json_encode(['error' => '–¢–æ–≤–∞—Ä –Ω–µ –Ω–∞–π–¥–µ–Ω']);
            }
            exit;
    }
}

try {
    $featuredProducts = getFeaturedProducts(12);
    $categories = getCategoriesWithCount();
    $cartCount = getCartCount();
    $favoritesCount = getFavoritesCount();
} catch (Exception $e) {
    error_log('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–∞–Ω–Ω—ã—Ö: ' . $e->getMessage());
    $featuredProducts = [];
    $categories = [];
    $cartCount = 0;
    $favoritesCount = 0;
}
