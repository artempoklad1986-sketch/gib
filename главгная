                        <i class='fas fa-shopping-bag me-2'></i>–ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å –ø–æ–∫—É–ø–∫–∏
                    </button>
                    <a href='checkout.php' class='btn btn-success' id='checkoutBtn' style='display: none;'>
                        <i class='fas fa-credit-card me-2'></i>–û—Ñ–æ—Ä–º–∏—Ç—å –∑–∞–∫–∞–∑
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- –ò–∑–±—Ä–∞–Ω–Ω–æ–µ Modal -->
    <div class='modal fade' id='favoritesModal' tabindex='-1'>
        <div class='modal-dialog modal-lg'>
            <div class='modal-content'>
                <div class='modal-header'>
                    <h5 class='modal-title'><i class='fas fa-heart me-2'></i>–ò–∑–±—Ä–∞–Ω–Ω—ã–µ —Ç–æ–≤–∞—Ä—ã</h5>
                    <button type='button' class='btn-close btn-close-white' data-bs-dismiss='modal'></button>
                </div>
                <div class='modal-body p-0'>
                    <div id='favoritesContent' style='min-height: 200px;'>
                        <div class='d-flex justify-content-center align-items-center' style='height: 200px;'>
                            <div class='spinner-border text-warning' role='status'>
                                <span class='visually-hidden'>–ó–∞–≥—Ä—É–∑–∫–∞...</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class='modal-footer'>
                    <button type='button' class='btn btn-outline-secondary' data-bs-dismiss='modal'>
                        <i class='fas fa-times me-2'></i>–ó–∞–∫—Ä—ã—Ç—å
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'></script>
    <script>
        let currentProductId = null;

        // –ú–ï–ì–ê —Ñ—É–Ω–∫—Ü–∏—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –≤ –∫–æ—Ä–∑–∏–Ω—É
        async function addToCart(productId, quantity = 1) {
            console.log('üõí –ú–ï–ì–ê –ö–û–†–ó–ò–ù–ê: –î–æ–±–∞–≤–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞', productId, '–∫–æ–ª–∏—á–µ—Å—Ç–≤–æ:', quantity);

            try {
                const formData = new FormData();
                formData.append('action', 'add_to_cart');
                formData.append('product_id', productId);
                formData.append('quantity', quantity);

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData,
                    credentials: 'same-origin'
                });

                const result = await response.json();
                console.log('üõí –†–µ–∑—É–ª—å—Ç–∞—Ç:', result);

                if (result.success) {
                    updateCartBadge(result.cartCount);
                    showNotification(result.message, 'success');
                    console.log('‚úÖ –¢–æ–≤–∞—Ä –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∫–æ—Ä–∑–∏–Ω—É!');
                } else {
                    showNotification(result.message || '–û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –≤ –∫–æ—Ä–∑–∏–Ω—É', 'error');
                    console.error('‚ùå –û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è:', result.message);
                }

            } catch (error) {
                console.error('üí• –ö—Ä–∏—Ç–∏—á–µ—Å–∫–∞—è –æ—à–∏–±–∫–∞:', error);
                showNotification('–û—à–∏–±–∫–∞ —Å–µ—Ç–∏: ' + error.message, 'error');
            }
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –∏–∑ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ –≤ –∫–æ—Ä–∑–∏–Ω—É
        async function addToCartFromFavorites(productId) {
            await addToCart(productId);
        }

        // –ò–∑–±—Ä–∞–Ω–Ω–æ–µ
        async function toggleFavorite(productId, button) {
            const isActive = button.classList.contains('active');
            const action = isActive ? 'remove_from_favorites' : 'add_to_favorites';

            try {
                const formData = new FormData();
                formData.append('action', action);
                formData.append('product_id', productId);

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    button.classList.toggle('active');
                    button.title = isActive ? '–î–æ–±–∞–≤–∏—Ç—å –≤ –∏–∑–±—Ä–∞–Ω–Ω–æ–µ' : '–£–¥–∞–ª–∏—Ç—å –∏–∑ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ';
                    updateFavoritesBadge(result.favoritesCount);
                    showNotification(result.message, 'success');

                    // –ï—Å–ª–∏ –æ—Ç–∫—Ä—ã—Ç–æ –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ, –æ–±–Ω–æ–≤–ª—è–µ–º –µ–≥–æ
                    if (document.getElementById('favoritesModal').classList.contains('show')) {
                        updateFavoritesModal();
                    }
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ:', error);
                showNotification('–û—à–∏–±–∫–∞ —Å–µ—Ç–∏', 'error');
            }
        }

        // –ü–æ–∫–∞–∑–∞—Ç—å –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ —Ç–æ–≤–∞—Ä–∞
        async function showProductModal(productId) {
            try {
                const response = await fetch(`index.php?action=get_product&id=${productId}`);
                const product = await response.json();

                if (product.error) {
                    showNotification('–¢–æ–≤–∞—Ä –Ω–µ –Ω–∞–π–¥–µ–Ω', 'error');
                    return;
                }

                currentProductId = productId;

                document.getElementById('productModalTitle').textContent = product.name || '–¢–æ–≤–∞—Ä';
                document.getElementById('productModalName').textContent = product.name || '–¢–æ–≤–∞—Ä';
                document.getElementById('productModalPrice').textContent = formatPrice(product.price || 0);
                document.getElementById('productModalDescription').textContent = product.description || '–û–ø–∏—Å–∞–Ω–∏–µ –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç';
                document.getElementById('reviewProductId').value = productId;

                // –ó–∞–≥—Ä—É–∑–∫–∞ –æ—Ç–∑—ã–≤–æ–≤
                loadProductReviews(product.reviews || []);

                const modal = new bootstrap.Modal(document.getElementById('productModal'));
                modal.show();

            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Ç–æ–≤–∞—Ä–∞:', error);
                showNotification('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Ç–æ–≤–∞—Ä–∞', 'error');
            }
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –æ—Ç–∑—ã–≤–æ–≤ –≤ –º–æ–¥–∞–ª—å–Ω–æ–º –æ–∫–Ω–µ —Ç–æ–≤–∞—Ä–∞
        function loadProductReviews(reviews) {
            const reviewsList = document.getElementById('reviewsList');

            if (!reviews || reviews.length === 0) {
                reviewsList.innerHTML = `
                    <div class='text-center text-muted py-3'>
                        <i class='fas fa-comment-dots fa-2x mb-2 d-block'></i>
                        <p>–û—Ç–∑—ã–≤–æ–≤ –ø–æ–∫–∞ –Ω–µ—Ç. –°—Ç–∞–Ω—å—Ç–µ –ø–µ—Ä–≤—ã–º!</p>
                    </div>
                `;
                return;
            }

            let reviewsHtml = '';
            reviews.forEach(review => {
                const stars = Array.from({length: 5}, (_, i) => 
                    `<i class='fas fa-star ${i < (review.rating || 0) ? 'text-warning' : 'text-muted'}'></i>`
                ).join('');

                reviewsHtml += `
                    <div class='review-item'>
                        <div class='d-flex justify-content-between align-items-start mb-2'>
                            <div>
                                <h6 class='mb-1'>${escapeHtml(review.customer_name || '–ê–Ω–æ–Ω–∏–º')}</h6>
                                <div class='stars mb-1'>${stars}</div>
                            </div>
                            <small class='text-muted'>${formatDate(review.created_at)}</small>
                        </div>
                        ${review.title ? `<h6 class='mb-2'>${escapeHtml(review.title)}</h6>` : ''}
                        <p class='mb-0'>${escapeHtml(review.comment || '')}</p>
                    </div>
                `;
            });

            reviewsList.innerHTML = reviewsHtml;
        }

        // –ú–ï–ì–ê —Ñ—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –∫–æ—Ä–∑–∏–Ω—ã
        async function updateCartModal() {
            try {
                const formData = new FormData();
                formData.append('action', 'get_cart_content');

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    document.getElementById('cartContent').innerHTML = result.content;

                    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º/—Å–∫—Ä—ã–≤–∞–µ–º –∫–Ω–æ–ø–∫—É –æ—Ñ–æ—Ä–º–ª–µ–Ω–∏—è –∑–∞–∫–∞–∑–∞
                    const checkoutBtn = document.getElementById('checkoutBtn');
                    if (result.total > 0) {
                        checkoutBtn.style.display = 'inline-flex';
                    } else {
                        checkoutBtn.style.display = 'none';
                    }
                } else {
                    throw new Error(result.message || '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∫–æ—Ä–∑–∏–Ω—ã');
                }

            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∫–æ—Ä–∑–∏–Ω—ã:', error);
                document.getElementById('cartContent').innerHTML = `
                    <div class='alert alert-danger m-3'>
                        <i class='fas fa-exclamation-triangle me-2'></i>
                        –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∫–æ—Ä–∑–∏–Ω—ã: ${error.message}
                    </div>
                `;
            }
        }

        // –ú–ï–ì–ê —Ñ—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ
        async function updateFavoritesModal() {
            try {
                const formData = new FormData();
                formData.append('action', 'get_favorites_content');

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    document.getElementById('favoritesContent').innerHTML = result.content;
                } else {
                    throw new Error(result.message || '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ');
                }

            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ:', error);
                document.getElementById('favoritesContent').innerHTML = `
                    <div class='alert alert-danger m-3'>
                        <i class='fas fa-exclamation-triangle me-2'></i>
                        –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ: ${error.message}
                    </div>
                `;
            }
        }

        // –û–±–Ω–æ–≤–∏—Ç—å –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –≤ –∫–æ—Ä–∑–∏–Ω–µ
        async function updateCartQuantity(productId, quantity) {
            try {
                const formData = new FormData();
                formData.append('action', 'update_cart_item');
                formData.append('product_id', productId);
                formData.append('quantity', quantity);

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    updateCartBadge(result.cartCount);
                    updateCartModal();
                    showNotification('–ö–æ—Ä–∑–∏–Ω–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∞', 'success');
                } else {
                    showNotification(result.message, 'error');
                }

            } catch (error) {
                showNotification('–û—à–∏–±–∫–∞ —Å–µ—Ç–∏', 'error');
            }
        }

        // –£–¥–∞–ª–∏—Ç—å –∏–∑ –∫–æ—Ä–∑–∏–Ω—ã
        async function removeFromCart(productId) {
            try {
                const formData = new FormData();
                formData.append('action', 'remove_from_cart');
                formData.append('product_id', productId);

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    updateCartBadge(result.cartCount);
                    updateCartModal();
                    showNotification(result.message, 'success');
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                showNotification('–û—à–∏–±–∫–∞ —Å–µ—Ç–∏', 'error');
            }
        }

        // –î–æ–±–∞–≤–∏—Ç—å –∏–∑ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
        function addToCartFromModal() {
            if (currentProductId) {
                addToCart(currentProductId);
            }
        }

        function toggleFavoriteFromModal() {
            if (currentProductId) {
                const button = document.getElementById('favoriteModalBtn');
                toggleFavorite(currentProductId, button);
            }
        }

        // –û—Ç–∑—ã–≤—ã
        function showReviewForm() {
            document.getElementById('reviewForm').style.display = 'block';
        }

        function hideReviewForm() {
            document.getElementById('reviewForm').style.display = 'none';
            document.getElementById('reviewSubmitForm').reset();
        }

        document.getElementById('reviewSubmitForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            try {
                const formData = new FormData(this);
                formData.append('action', 'submit_review');

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    showNotification(result.message, 'success');
                    hideReviewForm();
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                showNotification('–û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ –æ—Ç–∑—ã–≤–∞', 'error');
            }
        });

        // –û–±–Ω–æ–≤–∏—Ç—å —Å—á–µ—Ç—á–∏–∫–∏
        function updateCartBadge(count) {
            const badge = document.getElementById('cartCount');
            if (badge) {
                badge.textContent = count;
                badge.style.display = count > 0 ? 'inline' : 'none';
            }
        }

        function updateFavoritesBadge(count) {
            const badge = document.getElementById('favoritesCount');
            if (badge) {
                badge.textContent = count;
                badge.style.display = count > 0 ? 'inline' : 'none';
            }
        }

        // –ü–æ–∫–∞–∑–∞—Ç—å –∏–∑–±—Ä–∞–Ω–Ω–æ–µ
        function showFavorites() {
            updateFavoritesModal();
            const modal = new bootstrap.Modal(document.getElementById('favoritesModal'));
            modal.show();
        }

        // –£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è
        function showNotification(message, type = 'success') {
            const toastContainer = document.querySelector('.toast-container');
            const alertClass = type === 'success' ? 'alert-success' : (type === 'info' ? 'alert-info' : 'alert-danger');
            const icon = type === 'success' ? 'fas fa-check-circle' : (type === 'info' ? 'fas fa-info-circle' : 'fas fa-exclamation-circle');

            const notification = document.createElement('div');
            notification.className = `alert ${alertClass} alert-dismissible fade show`;
            notification.style.cssText = 'min-width: 300px; box-shadow: 0 4px 15px rgba(0,0,0,0.2);';
            notification.innerHTML = `
                <i class='${icon} me-2'></i>${message}
                <button type='button' class='btn-close' data-bs-dismiss='alert'></button>
            `;

            toastContainer.appendChild(notification);

            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 5000);
        }

        // –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
        function formatPrice(price) {
            const numPrice = parseFloat(price) || 0;
            return new Intl.NumberFormat('ru-RU', {
                style: 'currency',
                currency: 'RUB',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(numPrice);
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function formatDate(dateString) {
            if (!dateString) return '';
            const date = new Date(dateString);
            return date.toLocaleDateString('ru-RU', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        // –°–æ–±—ã—Ç–∏—è
        document.getElementById('cartModal').addEventListener('show.bs.modal', updateCartModal);

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ –ú–ï–ì–ê –ê–∫–≤–∞–°–±–æ—Ä –∑–∞–≥—Ä—É–∂–µ–Ω!');
            console.log('üõí –ù–∞—á–∞–ª—å–Ω—ã–π —Å—á–µ—Ç—á–∏–∫ –∫–æ—Ä–∑–∏–Ω—ã:', <?= $cartCount ?>);
            console.log('‚ù§Ô∏è –ù–∞—á–∞–ª—å–Ω—ã–π —Å—á–µ—Ç—á–∏–∫ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ:', <?= $favoritesCount ?>);
        });
    </script>
</body>
</html>
