<?php
session_start();
require_once 'functions.php';

error_log('=== МЕГА INDEX.PHP ЗАГРУЖЕН ===');

// Обработка AJAX запросов
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['action'])) {
    header('Content-Type: application/json; charset=utf-8');

    try {
        switch ($_POST['action']) {
            case 'add_to_cart':
                $productId = $_POST['product_id'] ?? '';
                $quantity = (int)($_POST['quantity'] ?? 1);

                error_log("AJAX: Добавление в корзину - ID: {$productId}, количество: {$quantity}");

                if (!empty($productId) && $quantity > 0) {
                    $result = addToCart($productId, $quantity);

                    if ($result) {
                        $cartCount = getCartCount();
                        error_log("AJAX: Товар добавлен, новый счетчик: {$cartCount}");

                        echo json_encode([
                            'success' => true,
                            'cartCount' => $cartCount,
                            'message' => 'Товар добавлен в корзину!'
                        ]);
                    } else {
                        echo json_encode([
                            'success' => false,
                            'message' => 'Не удалось добавить товар в корзину'
                        ]);
                    }
                } else {
                    echo json_encode([
                        'success' => false,
                        'message' => 'Некорректные параметры товара'
                    ]);
                }
                break;

            case 'add_to_favorites':
                $productId = $_POST['product_id'] ?? '';
                if (!empty($productId)) {
                    $result = addToFavorites($productId);
                    echo json_encode([
                        'success' => $result,
                        'message' => $result ? 'Товар добавлен в избранное' : 'Товар уже в избранном',
                        'favoritesCount' => getFavoritesCount()
                    ]);
                } else {
                    echo json_encode(['success' => false, 'message' => 'Некорректный ID товара']);
                }
                break;

            case 'remove_from_favorites':
                $productId = $_POST['product_id'] ?? '';
                if (!empty($productId)) {
                    $result = removeFromFavorites($productId);
                    echo json_encode([
                        'success' => $result,
                        'message' => $result ? 'Товар удален из избранного' : 'Ошибка удаления из избранного',
                        'favoritesCount' => getFavoritesCount()
                    ]);
                } else {
                    echo json_encode(['success' => false, 'message' => 'Некорректный ID товара']);
                }
                break;

            case 'submit_review':
                $reviewData = [
                    'id' => generateUniqueId(),
                    'product_id' => $_POST['product_id'] ?? '',
                    'customer_name' => trim($_POST['customer_name'] ?? ''),
                    'customer_email' => trim($_POST['customer_email'] ?? ''),
                    'rating' => (int)($_POST['rating'] ?? 0),
                    'title' => trim($_POST['title'] ?? ''),
                    'comment' => trim($_POST['comment'] ?? ''),
                    'status' => 'pending',
                    'created_at' => date('Y-m-d H:i:s')
                ];

                if ($reviewData['product_id'] && $reviewData['customer_name'] && $reviewData['comment'] && $reviewData['rating']) {
                    $result = saveReview($reviewData);
                    echo json_encode([
                        'success' => $result['success'],
                        'message' => $result['success'] ? 'Отзыв отправлен на модерацию' : $result['message']
                    ]);
                } else {
                    echo json_encode(['success' => false, 'message' => 'Заполните все обязательные поля']);
                }
                break;

            case 'get_cart_content':
                $cartData = getCartItems();
                ob_start();
                if (empty($cartData['items'])): ?>
                    <div class='text-center py-4'>
                        <i class='fas fa-shopping-cart fa-3x text-muted mb-3'></i>
                        <h5>Корзина пуста</h5>
                        <p class='text-muted'>Добавьте товары в корзину для оформления заказа</p>
                    </div>
                <?php else: ?>
                    <div class='cart-items'>
                        <?php foreach ($cartData['items'] as $item): ?>
                            <div class='cart-item d-flex align-items-center border-bottom py-3'>
                                <div class='item-image me-3'>
                                    <div class='bg-light d-flex align-items-center justify-content-center' style='width: 60px; height: 60px; border-radius: 8px;'>
                                        <i class='fas fa-fish text-muted'></i>
                                    </div>
                                </div>
                                <div class='item-info flex-grow-1'>
                                    <h6 class='mb-1'><?= htmlspecialchars($item['name']) ?></h6>
                                    <p class='text-muted small mb-0'><?= formatPrice($item['price']) ?> × <?= $item['quantity'] ?></p>
                                </div>
                                <div class='item-controls d-flex align-items-center'>
                                    <button class='btn btn-outline-secondary btn-sm me-2' onclick='updateCartQuantity("<?= $item['id'] ?>", <?= $item['quantity'] - 1 ?>)'>
                                        <i class='fas fa-minus'></i>
                                    </button>
                                    <span class='mx-2'><?= $item['quantity'] ?></span>
                                    <button class='btn btn-outline-secondary btn-sm me-3' onclick='updateCartQuantity("<?= $item['id'] ?>", <?= $item['quantity'] + 1 ?>)'>
                                        <i class='fas fa-plus'></i>
                                    </button>
                                    <button class='btn btn-outline-danger btn-sm me-2' onclick='removeFromCart("<?= $item['id'] ?>")' title='Удалить'>
                                        <i class='fas fa-times'></i>
                                    </button>
                                    <strong><?= formatPrice($item['subtotal']) ?></strong>
                                </div>
                            </div>
                        <?php endforeach; ?>
                        <div class='cart-total mt-3 pt-3 border-top'>
                            <div class='d-flex justify-content-between align-items-center'>
                                <h5 class='mb-0'>Итого:</h5>
                                <h4 class='mb-0 text-success'><?= formatPrice($cartData['total']) ?></h4>
                            </div>
                        </div>
                    </div>
                <?php endif;
                $content = ob_get_clean();
                echo json_encode(['success' => true, 'content' => $content]);
                break;

            case 'update_cart_item':
                $productId = $_POST['product_id'] ?? '';
                $quantity = (int)($_POST['quantity'] ?? 0);
                $result = updateCartItem($productId, $quantity);
                echo json_encode([
                    'success' => $result,
                    'cartCount' => getCartCount(),
                    'message' => $result ? 'Корзина обновлена' : 'Ошибка обновления'
                ]);
                break;

            case 'remove_from_cart':
                $productId = $_POST['product_id'] ?? '';
                $result = removeFromCart($productId);
                echo json_encode([
                    'success' => $result,
                    'cartCount' => getCartCount(),
                    'message' => $result ? 'Товар удален из корзины' : 'Ошибка удаления'
                ]);
                break;
        }
    } catch (Exception $e) {
        error_log('Ошибка AJAX: ' . $e->getMessage());
        echo json_encode(['success' => false, 'message' => 'Внутренняя ошибка сервера: ' . $e->getMessage()]);
    }
    exit;
}

if (isset($_GET['action'])) {
    switch ($_GET['action']) {
        case 'get_product':
            header('Content-Type: application/json; charset=utf-8');
            $id = $_GET['id'] ?? '';
            $product = getProductById($id);
            if ($product) {
                echo json_encode($product);
            } else {
                echo json_encode(['error' => 'Товар не найден']);
            }
            exit;
    }
}

try {
    $featuredProducts = getFeaturedProducts(12);
    $categories = getCategoriesWithCount();
    $cartCount = getCartCount();
    $favoritesCount = getFavoritesCount();
} catch (Exception $e) {
    error_log('Ошибка загрузки данных: ' . $e->getMessage());
    $featuredProducts = [];
    $categories = [];
    $cartCount = 0;
    $favoritesCount = 0;
}
?>
