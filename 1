                    <?php foreach ($featuredProducts as $product): ?>
                        <?php
                        $category = getCategoryById($product['category_id'] ?? 0);
                        $categoryName = $category ? $category['name'] : 'Без категории';
                        $rating = getProductRating($product['id']);
                        $isFavorite = isInFavorites($product['id']);
                        $labels = getProductLabels($product['id']);
                        ?>
                        <div class='col-xl-3 col-lg-4 col-md-6'>
                            <div class='product-card' onclick='showProductModal("<?= $product['id'] ?>")'>
                                <div class='product-image'>
                                    <button class='favorite-btn <?= $isFavorite ? 'active' : '' ?>' 
                                            onclick='event.stopPropagation(); toggleFavorite("<?= $product['id'] ?>", this)' 
                                            title='<?= $isFavorite ? 'Удалить из избранного' : 'Добавить в избранное' ?>'>
                                        <i class='fas fa-heart'></i>
                                    </button>

                                    <?php if (!empty($labels)): ?>
                                        <div class='product-labels'>
                                            <?php foreach ($labels as $label): ?>
                                                <span class='product-label <?= $label['class'] ?>'><?= htmlspecialchars($label['text']) ?></span>
                                            <?php endforeach; ?>
                                        </div>
                                    <?php endif; ?>

                                    <div class='d-flex align-items-center justify-content-center h-100'>
                                        <i class='fas fa-fish fa-3x text-muted'></i>
                                    </div>
                                    <div class='product-badge'><?= htmlspecialchars($categoryName) ?></div>
                                </div>
                                <div class='product-info'>
                                    <h6 class='product-name'><?= htmlspecialchars($product['name'] ?? 'Без названия') ?></h6>
                                    <?php if ($rating['count'] > 0): ?>
                                        <div class='product-rating'>
                                            <div class='stars'>
                                                <?php for ($i = 1; $i <= 5; $i++): ?>
                                                    <i class='fas fa-star <?= $i <= $rating['average'] ? 'text-warning' : 'text-muted' ?>'></i>
                                                <?php endfor; ?>
                                            </div>
                                            <span class='text-muted'><?= $rating['average'] ?> (<?= $rating['count'] ?>)</span>
                                        </div>
                                    <?php endif; ?>
                                    <p class='product-description'><?= htmlspecialchars(mb_substr($product['description'] ?? '', 0, 80)) ?>...</p>
                                    <div class='product-price'><?= formatPrice($product['price'] ?? 0) ?></div>
                                    <div class='product-actions'>
                                        <button class='btn btn-success btn-sm flex-fill' onclick='event.stopPropagation(); addToCart("<?= $product['id'] ?>")'>
                                            <i class='fas fa-cart-plus me-1'></i>В корзину
                                        </button>
                                        <button class='btn btn-outline-primary btn-sm' onclick='event.stopPropagation(); showProductModal("<?= $product['id'] ?>")'>
                                            <i class='fas fa-eye'></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <?php endforeach; ?>
                </div>
            <?php endif; ?>
        </div>
    </section>

