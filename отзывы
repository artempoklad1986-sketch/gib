    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'></script>
    <script>
        let currentProductId = null;

        // üõí –ú–ï–ì–ê –§–£–ù–ö–¶–ò–ò –ö–û–†–ó–ò–ù–´
        async function megaAddToCart(productId, quantity = 1) {
            console.log('üõí –ú–ï–ì–ê–ö–û–†–ó–ò–ù–ê: –î–æ–±–∞–≤–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞', productId, '–∫–æ–ª–∏—á–µ—Å—Ç–≤–æ:', quantity);

            try {
                const formData = new FormData();
                formData.append('action', 'mega_add_to_cart');
                formData.append('product_id', productId);
                formData.append('quantity', quantity);

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData,
                    credentials: 'same-origin'
                });

                const result = await response.json();
                console.log('üõí –†–µ–∑—É–ª—å—Ç–∞—Ç:', result);

                if (result.success) {
                    megaUpdateCartBadge(result.cartCount);
                    megaShowNotification(result.message, 'success');
                    console.log('‚úÖ –¢–æ–≤–∞—Ä –¥–æ–±–∞–≤–ª–µ–Ω –≤ –º–µ–≥–∞–∫–æ—Ä–∑–∏–Ω—É!');
                } else {
                    megaShowNotification(result.message || '‚ùå –û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –≤ –º–µ–≥–∞–∫–æ—Ä–∑–∏–Ω—É', 'error');
                    console.error('‚ùå –û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è:', result.message);
                }

            } catch (error) {
                console.error('üí• –ú–µ–≥–∞–∫—Ä–∏—Ç–∏—á–µ—Å–∫–∞—è –æ—à–∏–±–∫–∞:', error);
                megaShowNotification('üí• –ú–µ–≥–∞–æ—à–∏–±–∫–∞ —Å–µ—Ç–∏: ' + error.message, 'error');
            }
        }

        async function megaUpdateCartModal() {
            try {
                const formData = new FormData();
                formData.append('action', 'mega_get_cart_content');

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    document.getElementById('megaCartContent').innerHTML = result.content;

                    const checkoutBtn = document.getElementById('megaCheckoutBtn');
                    if (result.total > 0) {
                        checkoutBtn.style.display = 'inline-flex';
                    } else {
                        checkoutBtn.style.display = 'none';
                    }
                } else {
                    throw new Error(result.message || '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –º–µ–≥–∞–∫–æ—Ä–∑–∏–Ω—ã');
                }

            } catch (error) {
                console.error('üí• –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –º–µ–≥–∞–∫–æ—Ä–∑–∏–Ω—ã:', error);
                document.getElementById('megaCartContent').innerHTML = `
                    <div class='alert alert-danger m-4'>
                        <i class='fas fa-exclamation-triangle me-2'></i>
                        üí• –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –º–µ–≥–∞–∫–æ—Ä–∑–∏–Ω—ã: ${error.message}
                    </div>
                `;
            }
        }

        async function megaUpdateQuantity(productId, quantity) {
            try {
                const formData = new FormData();
                formData.append('action', 'mega_update_quantity');
                formData.append('product_id', productId);
                formData.append('quantity', quantity);

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    megaUpdateCartBadge(result.cartCount);
                    megaUpdateCartModal();
                    megaShowNotification('‚úÖ –ú–µ–≥–∞–∫–æ—Ä–∑–∏–Ω–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∞', 'success');
                } else {
                    megaShowNotification(result.message, 'error');
                }

            } catch (error) {
                megaShowNotification('üí• –ú–µ–≥–∞–æ—à–∏–±–∫–∞ —Å–µ—Ç–∏', 'error');
            }
        }

        async function megaRemoveItem(productId) {
            try {
                const formData = new FormData();
                formData.append('action', 'mega_remove_item');
                formData.append('product_id', productId);

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    megaUpdateCartBadge(result.cartCount);
                    megaUpdateCartModal();
                    megaShowNotification(result.message, 'success');
                } else {
                    megaShowNotification(result.message, 'error');
                }
            } catch (error) {
                megaShowNotification('üí• –ú–µ–≥–∞–æ—à–∏–±–∫–∞ —Å–µ—Ç–∏', 'error');
            }
        }

        // ‚ù§Ô∏è –ú–ï–ì–ê –§–£–ù–ö–¶–ò–ò –ò–ó–ë–†–ê–ù–ù–û–ì–û
        async function megaToggleFavorite(productId, button) {
            const isActive = button.classList.contains('text-warning');
            const action = isActive ? 'mega_remove_from_favorites' : 'mega_add_to_favorites';

            try {
                const formData = new FormData();
                formData.append('action', action);
                formData.append('product_id', productId);

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    if (isActive) {
                        button.classList.remove('text-warning');
                        button.classList.add('text-muted');
                        button.title = '–î–æ–±–∞–≤–∏—Ç—å –≤ –º–µ–≥–∞–∏–∑–±—Ä–∞–Ω–Ω–æ–µ';
                    } else {
                        button.classList.remove('text-muted');
                        button.classList.add('text-warning');
                        button.title = '–£–¥–∞–ª–∏—Ç—å –∏–∑ –º–µ–≥–∞–∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ';
                    }
                    megaUpdateFavoritesBadge(result.favoritesCount);
                    megaShowNotification(result.message, 'success');

                    // –û–±–Ω–æ–≤–ª—è–µ–º –∏–∑–±—Ä–∞–Ω–Ω–æ–µ –µ—Å–ª–∏ –æ–Ω–æ –æ—Ç–∫—Ä—ã—Ç–æ
                    if (document.getElementById('megaFavoritesModal').classList.contains('show')) {
                        megaUpdateFavoritesModal();
                    }
                } else {
                    megaShowNotification(result.message, 'error');
                }
            } catch (error) {
                console.error('üí• –ú–µ–≥–∞–æ—à–∏–±–∫–∞ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ:', error);
                megaShowNotification('üí• –ú–µ–≥–∞–æ—à–∏–±–∫–∞ —Å–µ—Ç–∏', 'error');
            }
        }

        async function megaShowFavorites() {
            megaUpdateFavoritesModal();
            const modal = new bootstrap.Modal(document.getElementById('megaFavoritesModal'));
            modal.show();
        }

        async function megaUpdateFavoritesModal() {
            try {
                const formData = new FormData();
                formData.append('action', 'mega_get_favorites_content');

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    document.getElementById('megaFavoritesContent').innerHTML = result.content;
                } else {
                    throw new Error(result.message || '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –º–µ–≥–∞–∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ');
                }

            } catch (error) {
                console.error('üí• –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –º–µ–≥–∞–∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ:', error);
                document.getElementById('megaFavoritesContent').innerHTML = `
                    <div class='alert alert-danger m-4'>
                        <i class='fas fa-exclamation-triangle me-2'></i>
                        üí• –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –º–µ–≥–∞–∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ: ${error.message}
                    </div>
                `;
            }
        }

        async function megaAddToCartFromFavorites(productId) {
            await megaAddToCart(productId);
        }

        async function megaRemoveFromFavorites(productId) {
            try {
                const formData = new FormData();
                formData.append('action', 'mega_remove_from_favorites');
                formData.append('product_id', productId);

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    megaUpdateFavoritesBadge(result.favoritesCount);
                    megaUpdateFavoritesModal();
                    megaShowNotification(result.message, 'success');
                } else {
                    megaShowNotification(result.message, 'error');
                }
            } catch (error) {
                megaShowNotification('üí• –ú–µ–≥–∞–æ—à–∏–±–∫–∞ —Å–µ—Ç–∏', 'error');
            }
        }

        // üëÅÔ∏è –§–£–ù–ö–¶–ò–ò –ü–†–û–°–ú–û–¢–†–ê –¢–û–í–ê–†–û–í
        async function showProductModal(productId) {
            try {
                const response = await fetch(`index.php?action=get_product&id=${productId}`);
                const product = await response.json();

                if (product.error) {
                    megaShowNotification('‚ùå –¢–æ–≤–∞—Ä –Ω–µ –Ω–∞–π–¥–µ–Ω', 'error');
                    return;
                }

                currentProductId = productId;

                document.getElementById('productModalTitle').textContent = product.name || '–¢–æ–≤–∞—Ä';
                document.getElementById('productModalName').textContent = product.name || '–¢–æ–≤–∞—Ä';
                document.getElementById('productModalPrice').textContent = formatPrice(product.price || 0);
                document.getElementById('productModalDescription').textContent = product.description || '–û–ø–∏—Å–∞–Ω–∏–µ –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç';
                document.getElementById('reviewProductId').value = productId;

                loadProductReviews(product.reviews || []);

                const modal = new bootstrap.Modal(document.getElementById('productModal'));
                modal.show();

            } catch (error) {
                console.error('üí• –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Ç–æ–≤–∞—Ä–∞:', error);
                megaShowNotification('üí• –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Ç–æ–≤–∞—Ä–∞', 'error');
            }
        }

        function loadProductReviews(reviews) {
            const reviewsList = document.getElementById('reviewsList');

            if (!reviews || reviews.length === 0) {
                reviewsList.innerHTML = `
                    <div class='text-center text-muted py-4'>
                        <i class='fas fa-comment-dots fa-3x mb-3 d-block'></i>
                        <h6>ü§∑ –ú–µ–≥–∞–æ—Ç–∑—ã–≤–æ–≤ –ø–æ–∫–∞ –Ω–µ—Ç</h6>
                        <p>–°—Ç–∞–Ω—å—Ç–µ –ø–µ—Ä–≤—ã–º, –∫—Ç–æ –æ—Å—Ç–∞–≤–∏—Ç –º–µ–≥–∞–æ—Ç–∑—ã–≤!</p>
                    </div>
                `;
                return;
            }

            let reviewsHtml = '';
            reviews.forEach(review => {
                const stars = Array.from({length: 5}, (_, i) => 
                    `<i class='fas fa-star ${i < (review.rating || 0) ? 'text-warning' : 'text-muted'}'></i>`
                ).join('');

                reviewsHtml += `
                    <div class='review-item bg-white p-3 rounded-3 mb-3 border'>
                        <div class='d-flex justify-content-between align-items-start mb-2'>
                            <div>
                                <h6 class='mb-1 fw-bold'>üë§ ${escapeHtml(review.customer_name || '–ú–µ–≥–∞–∞–Ω–æ–Ω–∏–º')}</h6>
                                <div class='stars mb-1'>${stars}</div>
                            </div>
                            <small class='text-muted'>üìÖ ${formatDate(review.created_at)}</small>
                        </div>
                        ${review.title ? `<h6 class='mb-2 text-primary'>üìù ${escapeHtml(review.title)}</h6>` : ''}
                        <p class='mb-0'>üí¨ ${escapeHtml(review.comment || '')}</p>
                    </div>
                `;
            });

            reviewsList.innerHTML = reviewsHtml;
        }

        function megaAddToCartFromModal() {
            if (currentProductId) {
                megaAddToCart(currentProductId);
            }
        }

        function megaToggleFavoriteFromModal() {
            if (currentProductId) {
                const button = document.getElementById('favoriteModalBtn');
                megaToggleFavorite(currentProductId, button);
            }
        }

        // üåü –ú–ï–ì–ê –û–¢–ó–´–í–´
        function showMegaReviewForm() {
            document.getElementById('reviewForm').style.display = 'block';
        }

        function hideMegaReviewForm() {
            document.getElementById('reviewForm').style.display = 'none';
            document.getElementById('reviewSubmitForm').reset();
        }

        document.getElementById('reviewSubmitForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            try {
                const formData = new FormData(this);
                formData.append('action', 'mega_submit_review');

                const response = await fetch('index.php', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    megaShowNotification(result.message, 'success');
                    hideMegaReviewForm();
                } else {
                    megaShowNotification(result.message, 'error');
                }
            } catch (error) {
                megaShowNotification('üí• –û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ –º–µ–≥–∞–æ—Ç–∑—ã–≤–∞', 'error');
            }
        });

        // üîÑ –û–ë–ù–û–í–õ–ï–ù–ò–ï –ë–≠–ô–î–ñ–ï–ô
        function megaUpdateCartBadge(count) {
            const badge = document.getElementById('megaCartCount');
            if (badge) {
                badge.textContent = count;
                badge.style.display = count > 0 ? 'flex' : 'none';
            }
        }

        function megaUpdateFavoritesBadge(count) {
            const badge = document.getElementById('megaFavoritesCount');
            if (badge) {
                badge.textContent = count;
                badge.style.display = count > 0 ? 'flex' : 'none';
            }
        }

        // üîî –ú–ï–ì–ê –£–í–ï–î–û–ú–õ–ï–ù–ò–Ø
        function megaShowNotification(message, type = 'success') {
            const toastContainer = document.querySelector('.toast-container');
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const icon = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            const emoji = type === 'success' ? '‚úÖ' : '‚ùå';

            const notification = document.createElement('div');
            notification.className = `alert ${alertClass} alert-dismissible fade show shadow-lg`;
            notification.style.cssText = 'min-width: 350px; box-shadow: 0 6px 20px rgba(0,0,0,0.25); border: none; font-weight: 500;';
            notification.innerHTML = `
                <i class='${icon} me-2'></i>${emoji} ${message}
                <button type='button' class='btn-close' data-bs-dismiss='alert'></button>
            `;

            toastContainer.appendChild(notification);

            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 6000);
        }

        // üõ†Ô∏è –í–°–ü–û–ú–û–ì–ê–¢–ï–õ–¨–ù–´–ï –§–£–ù–ö–¶–ò–ò
        function formatPrice(price) {
            const numPrice = parseFloat(price) || 0;
            return new Intl.NumberFormat('ru-RU', {
                style: 'currency',
                currency: 'RUB',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(numPrice);
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function formatDate(dateString) {
            if (!dateString) return '';
            const date = new Date(dateString);
            return date.toLocaleDateString('ru-RU', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        // üì± –°–û–ë–´–¢–ò–Ø –ò –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò–Ø
        document.getElementById('megaCartModal').addEventListener('show.bs.modal', megaUpdateCartModal);

        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ –ú–ï–ì–ê –ê–∫–≤–∞–°–±–æ—Ä –∑–∞–≥—Ä—É–∂–µ–Ω!');
            console.log('üõí –ú–µ–≥–∞—Å—á–µ—Ç—á–∏–∫ –∫–æ—Ä–∑–∏–Ω—ã:', <?= $cartCount ?>);
            console.log('‚ù§Ô∏è –ú–µ–≥–∞—Å—á–µ—Ç—á–∏–∫ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ:', <?= $favoritesCount ?>);

            // –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–µ–Ω–Ω–æ–µ –º–µ–≥–∞—É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
            setTimeout(() => {
                megaShowNotification('üéâ –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –ú–ï–ì–ê–ú–ê–ì–ê–ó–ò–ù –ê–∫–≤–∞–°–±–æ—Ä!', 'success');
            }, 1000);
        });
    </script>
