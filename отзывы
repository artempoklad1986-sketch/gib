        }
        .mega-favorites-btn:hover { box-shadow: 0 6px 25px rgba(245,158,11,0.4); }

        /* –ú–ï–ì–ê BADGES */
        .mega-cart-badge, .mega-favorites-badge { 
            position: absolute; 
            top: -8px; 
