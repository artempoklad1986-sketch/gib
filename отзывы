            font-weight: 700;
            border: 2px solid white;
            box-shadow: 0 2px 8px rgba(239,68,68,0.4);
            animation: pulse 2s infinite;
        }
        .mega-favorites-badge { background: linear-gradient(135deg, #F59E0B, #D97706); }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        /* –ú–ï–ì–ê –ö–û–†–ó–ò–ù–ê –°–¢–ò–õ–ò */
        .mega-cart-items {
            max-height: 70vh;
