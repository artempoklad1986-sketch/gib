<?php
session_start();
require_once 'functions.php';

error_log('=== –ú–ï–ì–ê INDEX.PHP –ó–ê–ì–†–£–ñ–ï–ù ===');

// ========== –ú–ï–ì–ê AJAX –û–ë–†–ê–ë–û–¢–ß–ò–ö–ò ==========
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['action'])) {
    header('Content-Type: application/json; charset=utf-8');

    try {
        switch ($_POST['action']) {
            // üõí –ú–ï–ì–ê –ö–û–†–ó–ò–ù–ê
            case 'mega_add_to_cart':
                $productId = $_POST['product_id'] ?? '';
                $quantity = (int)($_POST['quantity'] ?? 1);

                error_log("üõí –ú–ï–ì–ê–ö–û–†–ó–ò–ù–ê: –î–æ–±–∞–≤–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞ ID: {$productId}, –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ: {$quantity}");

                if (!empty($productId) && $quantity > 0) {
                    $result = addToCart($productId, $quantity);

                    if ($result) {
                        $cartCount = getCartCount();
                        $cartTotal = getCartTotal();
                        error_log("‚úÖ –ú–ï–ì–ê–ö–û–†–ó–ò–ù–ê: –¢–æ–≤–∞—Ä –¥–æ–±–∞–≤–ª–µ–Ω, —Å—á–µ—Ç—á–∏–∫: {$cartCount}");

                        echo json_encode([
                            'success' => true,
                            'cartCount' => $cartCount,
                            'cartTotal' => $cartTotal,
                            'message' => 'üõí –¢–æ–≤–∞—Ä –¥–æ–±–∞–≤–ª–µ–Ω –≤ –º–µ–≥–∞–∫–æ—Ä–∑–∏–Ω—É!'
                        ]);
                    } else {
                        echo json_encode([
                            'success' => false,
                            'message' => '‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –¥–æ–±–∞–≤–∏—Ç—å —Ç–æ–≤–∞—Ä –≤ –º–µ–≥–∞–∫–æ—Ä–∑–∏–Ω—É'
                        ]);
                    }
                } else {
                    echo json_encode([
                        'success' => false,
                        'message' => '‚ùå –ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–µ –ø–∞—Ä–∞–º–µ—Ç—Ä—ã —Ç–æ–≤–∞—Ä–∞'
                    ]);
                }
                break;

            case 'mega_get_cart_content':
                $cartData = getCartItems();
                ob_start();
                if (empty($cartData['items'])): ?>
                    <div class='mega-empty-cart text-center py-5'>
                        <div class='mega-cart-icon mb-4'>
                            <i class='fas fa-shopping-cart fa-5x text-muted opacity-25'></i>
                        </div>
                        <h3 class='mb-3'>üõí –ú–µ–≥–∞–∫–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞</h3>
                        <p class='text-muted mb-4'>–î–æ–±–∞–≤—å—Ç–µ —Ç–æ–≤–∞—Ä—ã –≤ –º–µ–≥–∞–∫–æ—Ä–∑–∏–Ω—É –¥–ª—è –æ—Ñ–æ—Ä–º–ª–µ–Ω–∏—è –∑–∞–∫–∞–∑–∞</p>
                        <button class='btn btn-primary btn-lg' data-bs-dismiss='modal'>
                            <i class='fas fa-shopping-bag me-2'></i>üõçÔ∏è –ù–∞—á–∞—Ç—å –ø–æ–∫—É–ø–∫–∏
                        </button>
                    </div>
                <?php else: ?>
                    <div class='mega-cart-items'>
                        <div class='mega-cart-header mb-3'>
                            <h5 class='mb-0'>üõí –¢–æ–≤–∞—Ä—ã –≤ –º–µ–≥–∞–∫–æ—Ä–∑–∏–Ω–µ</h5>
                            <small class='text-muted'><?= count($cartData['items']) ?> —Ç–æ–≤–∞—Ä–æ–≤ –Ω–∞ —Å—É–º–º—É <?= formatPrice($cartData['total']) ?></small>
                        </div>

                        <?php foreach ($cartData['items'] as $item): ?>
                            <div class='mega-cart-item' data-product-id='<?= $item['id'] ?>'>
                                <div class='mega-item-image'>
                                    <div class='mega-product-placeholder'>
                                        <i class='fas fa-fish text-primary fs-4'></i>
                                    </div>
                                </div>

                                <div class='mega-item-info'>
                                    <h6 class='mega-item-name'><?= htmlspecialchars($item['name']) ?></h6>
                                    <div class='mega-item-price'>üí∞ <?= formatPrice($item['price']) ?></div>
                                    <div class='mega-item-category text-muted small'>
                                        <?php 
                                        $category = getCategoryById($item['category_id'] ?? 0);
                                        echo $category ? htmlspecialchars($category['name']) : '–ë–µ–∑ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏';
                                        ?>
                                    </div>
                                </div>

                                <div class='mega-item-controls'>
                                    <div class='mega-quantity-controls'>
                                        <button class='mega-qty-btn mega-qty-minus' 
                                                onclick='megaUpdateQuantity("<?= $item['id'] ?>", <?= $item['quantity'] - 1 ?>)'
                                                <?= $item['quantity'] <= 1 ? 'disabled' : '' ?>>
                                            <i class='fas fa-minus'></i>
                                        </button>
                                        <span class='mega-quantity'><?= $item['quantity'] ?></span>
                                        <button class='mega-qty-btn mega-qty-plus' 
                                                onclick='megaUpdateQuantity("<?= $item['id'] ?>", <?= $item['quantity'] + 1 ?>)'>
                                            <i class='fas fa-plus'></i>
                                        </button>
                                    </div>

                                    <div class='mega-item-subtotal'>
                                        <div class='mega-subtotal-amount'>üí∏ <?= formatPrice($item['subtotal']) ?></div>
                                    </div>

                                    <button class='mega-remove-btn' 
                                            onclick='megaRemoveItem("<?= $item['id'] ?>")'
                                            title='–£–¥–∞–ª–∏—Ç—å –∏–∑ –º–µ–≥–∞–∫–æ—Ä–∑–∏–Ω—ã'>
                                        <i class='fas fa-trash-alt'></i>
                                    </button>
                                </div>
                            </div>
                        <?php endforeach; ?>

                        <div class='mega-cart-summary'>
                            <div class='mega-summary-content'>
                                <div class='mega-summary-row'>
                                    <span>üì¶ –¢–æ–≤–∞—Ä–æ–≤:</span>
                                    <span><?= count($cartData['items']) ?> —à—Ç.</span>
                                </div>
                                <div class='mega-summary-row'>
                                    <span>üìä –û–±—â–∏–π –≤–µ—Å:</span>
                                    <span><?= number_format(count($cartData['items']) * 0.5, 1) ?> –∫–≥</span>
                                </div>
                                <div class='mega-summary-row'>
                                    <span>üöö –î–æ—Å—Ç–∞–≤–∫–∞:</span>
                                    <span class='text-success'>–ë–ï–°–ü–õ–ê–¢–ù–û</span>
                                </div>
                                <hr class='mega-separator'>
                                <div class='mega-summary-total'>
                                    <h4 class='mb-0'>üí∞ –ò–¢–û–ì–û: <span class='text-success'><?= formatPrice($cartData['total']) ?></span></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                <?php endif;
                $content = ob_get_clean();
                echo json_encode([
                    'success' => true, 
                    'content' => $content, 
                    'total' => $cartData['total'],
                    'count' => count($cartData['items'])
                ]);
                break;

            case 'mega_update_quantity':
                $productId = $_POST['product_id'] ?? '';
                $quantity = (int)($_POST['quantity'] ?? 0);

                error_log("üõí –ú–ï–ì–ê–ö–û–†–ó–ò–ù–ê: –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–∞ —Ç–æ–≤–∞—Ä–∞ {$productId} –Ω–∞ {$quantity}");

                $result = updateCartItem($productId, $quantity);
                $cartData = getCartItems();

                echo json_encode([
                    'success' => $result,
                    'cartCount' => getCartCount(),
                    'cartTotal' => $cartData['total'],
                    'message' => $result ? '‚úÖ –ú–µ–≥–∞–∫–æ—Ä–∑–∏–Ω–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∞' : '‚ùå –û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è'
                ]);
                break;

            case 'mega_remove_item':
                $productId = $_POST['product_id'] ?? '';

                error_log("üõí –ú–ï–ì–ê–ö–û–†–ó–ò–ù–ê: –£–¥–∞–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞ {$productId}");

                $result = removeFromCart($productId);
                $cartData = getCartItems();

                echo json_encode([
                    'success' => $result,
                    'cartCount' => getCartCount(),
                    'cartTotal' => $cartData['total'],
                    'message' => $result ? 'üóëÔ∏è –¢–æ–≤–∞—Ä —É–¥–∞–ª–µ–Ω –∏–∑ –º–µ–≥–∞–∫–æ—Ä–∑–∏–Ω—ã' : '‚ùå –û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è'
                ]);
                break;

            // ‚ù§Ô∏è –ú–ï–ì–ê –ò–ó–ë–†–ê–ù–ù–û–ï
            case 'mega_add_to_favorites':
                $productId = $_POST['product_id'] ?? '';
                if (!empty($productId)) {
                    $result = addToFavorites($productId);
                    echo json_encode([
                        'success' => $result,
                        'message' => $result ? '‚ù§Ô∏è –¢–æ–≤–∞—Ä –¥–æ–±–∞–≤–ª–µ–Ω –≤ –º–µ–≥–∞–∏–∑–±—Ä–∞–Ω–Ω–æ–µ' : 'üíî –¢–æ–≤–∞—Ä —É–∂–µ –≤ –∏–∑–±—Ä–∞–Ω–Ω–æ–º',
                        'favoritesCount' => getFavoritesCount()
                    ]);
                } else {
                    echo json_encode(['success' => false, 'message' => '‚ùå –ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π ID —Ç–æ–≤–∞—Ä–∞']);
                }
                break;

            case 'mega_remove_from_favorites':
                $productId = $_POST['product_id'] ?? '';
                if (!empty($productId)) {
                    $result = removeFromFavorites($productId);
                    echo json_encode([
                        'success' => $result,
                        'message' => $result ? 'üíî –¢–æ–≤–∞—Ä —É–¥–∞–ª–µ–Ω –∏–∑ –º–µ–≥–∞–∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ' : '‚ùå –û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è',
                        'favoritesCount' => getFavoritesCount()
                    ]);
                } else {
                    echo json_encode(['success' => false, 'message' => '‚ùå –ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π ID —Ç–æ–≤–∞—Ä–∞']);
                }
                break;

            case 'mega_get_favorites_content':
                $favorites = getFavoritesItems();
                ob_start();
                if (empty($favorites)): ?>
                    <div class='mega-empty-favorites text-center py-5'>
                        <div class='mega-favorites-icon mb-4'>
                            <i class='fas fa-heart fa-5x text-muted opacity-25'></i>
                        </div>
                        <h3 class='mb-3'>‚ù§Ô∏è –ú–µ–≥–∞–∏–∑–±—Ä–∞–Ω–Ω–æ–µ –ø—É—Å—Ç–æ</h3>
                        <p class='text-muted mb-4'>–î–æ–±–∞–≤–ª—è–π—Ç–µ —Ç–æ–≤–∞—Ä—ã –≤ –º–µ–≥–∞–∏–∑–±—Ä–∞–Ω–Ω–æ–µ, —á—Ç–æ–±—ã –Ω–µ –ø–æ—Ç–µ—Ä—è—Ç—å –∏—Ö</p>
                        <button class='btn btn-warning btn-lg' data-bs-dismiss='modal'>
                            <i class='fas fa-heart me-2'></i>üíõ –ù–∞–π—Ç–∏ –ª—é–±–∏–º—ã–µ —Ç–æ–≤–∞—Ä—ã
                        </button>
                    </div>
                <?php else: ?>
                    <div class='mega-favorites-items'>
                        <div class='mega-favorites-header mb-3'>
                            <h5 class='mb-0'>‚ù§Ô∏è –ú–µ–≥–∞–∏–∑–±—Ä–∞–Ω–Ω–æ–µ</h5>
                            <small class='text-muted'><?= count($favorites) ?> –ª—é–±–∏–º—ã—Ö —Ç–æ–≤–∞—Ä–æ–≤</small>
                        </div>

                        <?php foreach ($favorites as $item): ?>
                            <div class='mega-favorites-item'>
                                <div class='mega-item-image'>
                                    <div class='mega-product-placeholder'>
                                        <i class='fas fa-fish text-warning fs-4'></i>
                                    </div>
                                </div>

                                <div class='mega-item-info'>
                                    <h6 class='mega-item-name'><?= htmlspecialchars($item['name']) ?></h6>
                                    <div class='mega-item-price text-success fw-bold'>üí∞ <?= formatPrice($item['price']) ?></div>
                                    <div class='mega-item-description text-muted small'>
                                        <?= htmlspecialchars(mb_substr($item['description'] ?? '', 0, 60)) ?>...
                                    </div>
                                    <?php
                                    $rating = getProductRating($item['id']);
                                    if ($rating['count'] > 0):
                                    ?>
                                        <div class='mega-item-rating'>
                                            <?php for ($i = 1; $i <= 5; $i++): ?>
                                                <i class='fas fa-star <?= $i <= $rating['average'] ? 'text-warning' : 'text-muted' ?>'></i>
                                            <?php endfor; ?>
                                            <small class='text-muted ms-1'>(<?= $rating['count'] ?>)</small>
                                        </div>
                                    <?php endif; ?>
                                </div>

                                <div class='mega-item-actions'>
                                    <button class='btn btn-success btn-sm mb-2' 
                                            onclick='megaAddToCartFromFavorites("<?= $item['id'] ?>")'>
                                        <i class='fas fa-cart-plus me-1'></i>üõí –í –∫–æ—Ä–∑–∏–Ω—É
                                    </button>
                                    <button class='btn btn-outline-primary btn-sm mb-2' 
                                            onclick='showProductModal("<?= $item['id'] ?>")'>
                                        <i class='fas fa-eye me-1'></i>üëÅÔ∏è –ü—Ä–æ—Å–º–æ—Ç—Ä
                                    </button>
                                    <button class='btn btn-outline-danger btn-sm' 
                                            onclick='megaRemoveFromFavorites("<?= $item['id'] ?>")'>
                                        <i class='fas fa-heart-broken me-1'></i>üíî –£–¥–∞–ª–∏—Ç—å
                                    </button>
                                </div>
                            </div>
                        <?php endforeach; ?>
                    </div>
                <?php endif;
                $content = ob_get_clean();
                echo json_encode(['success' => true, 'content' => $content, 'count' => count($favorites)]);
                break;

            // üåü –ú–ï–ì–ê –û–¢–ó–´–í–´
            case 'mega_submit_review':
                $reviewData = [
                    'id' => generateUniqueId(),
                    'product_id' => $_POST['product_id'] ?? '',
                    'customer_name' => trim($_POST['customer_name'] ?? ''),
                    'customer_email' => trim($_POST['customer_email'] ?? ''),
                    'rating' => (int)($_POST['rating'] ?? 0),
                    'title' => trim($_POST['title'] ?? ''),
                    'comment' => trim($_POST['comment'] ?? ''),
                    'status' => 'pending',
                    'created_at' => date('Y-m-d H:i:s')
                ];

                if ($reviewData['product_id'] && $reviewData['customer_name'] && $reviewData['comment'] && $reviewData['rating']) {
                    $result = saveReview($reviewData);
                    echo json_encode([
                        'success' => $result['success'],
                        'message' => $result['success'] ? 'üåü –ú–µ–≥–∞–æ—Ç–∑—ã–≤ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω –Ω–∞ –º–æ–¥–µ—Ä–∞—Ü–∏—é!' : $result['message']
                    ]);
                } else {
                    echo json_encode(['success' => false, 'message' => '‚ùå –ó–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è']);
                }
                break;
        }
    } catch (Exception $e) {
        error_log('üí• –ú–ï–ì–ê –û–®–ò–ë–ö–ê AJAX: ' . $e->getMessage());
        echo json_encode(['success' => false, 'message' => 'üí• –ú–µ–≥–∞–æ—à–∏–±–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞: ' . $e->getMessage()]);
    }
    exit;
}

// –ü–æ–ª—É—á–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞
if (isset($_GET['action'])) {
    switch ($_GET['action']) {
        case 'get_product':
            header('Content-Type: application/json; charset=utf-8');
            $id = $_GET['id'] ?? '';
            $product = getProductById($id);
            if ($product) {
                $reviews = getProductReviews($id);
                $product['reviews'] = $reviews;
                echo json_encode($product);
            } else {
                echo json_encode(['error' => '–¢–æ–≤–∞—Ä –Ω–µ –Ω–∞–π–¥–µ–Ω']);
            }
            exit;
    }
}

try {
    $featuredProducts = getFeaturedProducts(12);
    $categories = getCategoriesWithCount();
    $cartCount = getCartCount();
    $favoritesCount = getFavoritesCount();
} catch (Exception $e) {
    error_log('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–∞–Ω–Ω—ã—Ö: ' . $e->getMessage());
    $featuredProducts = [];
    $categories = [];
    $cartCount = 0;
    $favoritesCount = 0;
}
?>
