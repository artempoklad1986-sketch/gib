<?php
require_once '../functions.php';
initSession();

// Обработка AJAX запросов админки
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['action'])) {
    header('Content-Type: application/json; charset=utf-8');

    try {
        switch ($_POST['action']) {
            case 'delete_product':
                $id = (int)($_POST['id'] ?? 0);
                $result = deleteProduct($id);
                echo json_encode([
                    'success' => $result,
                    'message' => $result ? 'Товар удален' : 'Ошибка удаления товара'
                ]);
                break;

            case 'update_order_status':
                $id = (int)($_POST['id'] ?? 0);
                $status = trim($_POST['status'] ?? '');
                $result = updateOrderStatus($id, $status);
                echo json_encode([
                    'success' => $result,
                    'message' => $result ? 'Статус заказа обновлен' : 'Ошибка обновления статуса'
                ]);
                break;

            case 'delete_category':
                $id = (int)($_POST['id'] ?? 0);
                $result = deleteCategory($id);
                echo json_encode([
                    'success' => $result,
                    'message' => $result ? 'Категория удалена' : 'Ошибка удаления категории'
                ]);
                break;

            default:
                echo json_encode(['success' => false, 'message' => 'Неизвестное действие']);
                break;
        }
    } catch (Exception $e) {
        error_log('Ошибка в админ панели: ' . $e->getMessage());
        echo json_encode(['success' => false, 'message' => 'Внутренняя ошибка сервера']);
    }
    exit;
}

// Получаем статистику и текущую страницу
try {
    $stats = getDashboardStats();
    $page = trim($_GET['page'] ?? 'dashboard');

    // Безопасность: разрешенные страницы
    $allowedPages = [
        'dashboard', 'products', 'add_product', 'product_editor', 'categories', 
        'orders', 'statistics', 'settings', 'news_mega_system', 'reviews', 
        'slider', 'plant_constructor', 'plant_library'
    ];

    if (!in_array($page, $allowedPages)) {
        $page = 'dashboard';
    }
} catch (Exception $e) {
    error_log('Ошибка загрузки админ данных: ' . $e->getMessage());
    $stats = [
        'total_products' => 0, 'total_categories' => 0, 'total_orders' => 0, 
        'today_orders' => 0, 'month_orders' => 0, 'total_revenue' => 0, 'month_revenue' => 0
    ];
    $page = 'dashboard';
}
